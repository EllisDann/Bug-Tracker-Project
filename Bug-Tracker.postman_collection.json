{
  "info": {
    "name": "Bug Tracker API",
    "description": "Complete API collection for Bug Tracker Lite",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Developer\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"developer\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users/register",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "if (response.token) {",
                  "    pm.environment.set('auth_token', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@bugtracker.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users/login",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "login"]
            }
          }
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/users",
              "host": ["{{base_url}}"],
              "path": ["api", "users"]
            }
          }
        }
      ]
    },
    {
      "name": "Bugs",
      "item": [
        {
          "name": "Get All Bugs",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/bugs?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "bugs"],
              "query": [
                {
                  "key": "status",
                  "value": "open",
                  "disabled": true
                },
                {
                  "key": "priority",
                  "value": "high",
                  "disabled": true
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Bug by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/bugs/1",
              "host": ["{{base_url}}"],
              "path": ["api", "bugs", "1"]
            }
          }
        },
        {
          "name": "Create Bug",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "if (response.id) {",
                  "    pm.environment.set('bug_id', response.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Login page not loading on mobile\",\n  \"description\": \"Users are unable to access the login page when using mobile browsers. The page shows a blank screen.\",\n  \"priority\": \"critical\",\n  \"severity\": \"critical\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/bugs",
              "host": ["{{base_url}}"],
              "path": ["api", "bugs"]
            }
          }
        },
        {
          "name": "Update Bug",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"in_progress\",\n  \"assigned_to\": 2\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/bugs/{{bug_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "bugs", "{{bug_id}}"]
            }
          }
        },
        {
          "name": "Add Comment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"comment\": \"I've identified the root cause. The mobile CSS is missing a viewport meta tag.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/bugs/{{bug_id}}/comments",
              "host": ["{{base_url}}"],
              "path": ["api", "bugs", "{{bug_id}}", "comments"]
            }
          }
        },
        {
          "name": "Delete Bug",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/bugs/{{bug_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "bugs", "{{bug_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Reports",
      "item": [
        {
          "name": "Bugs by Priority",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/reports/bugs-by-priority",
              "host": ["{{base_url}}"],
              "path": ["api", "reports", "bugs-by-priority"]
            }
          }
        },
        {
          "name": "Bugs Per Day",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/reports/bugs-per-day?days=30",
              "host": ["{{base_url}}"],
              "path": ["api", "reports", "bugs-per-day"],
              "query": [
                {
                  "key": "days",
                  "value": "30"
                }
              ]
            }
          }
        },
        {
          "name": "Developer Performance",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/reports/developer-performance",
              "host": ["{{base_url}}"],
              "path": ["api", "reports", "developer-performance"]
            }
          }
        },
        {
          "name": "SLA Violations",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/reports/sla-violations",
              "host": ["{{base_url}}"],
              "path": ["api", "reports", "sla-violations"]
            }
          }
        },
        {
          "name": "Bug Status Summary",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/reports/bug-status-summary",
              "host": ["{{base_url}}"],
              "path": ["api", "reports", "bug-status-summary"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    }
  ]
}
